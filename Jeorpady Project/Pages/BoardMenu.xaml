<Page x:Class="Jeorpady_Project.BoardMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Jeorpady_Project"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BoardMenu">

    <Grid Background="#0e1684">
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="Start" MinHeight="25" MinWidth="75" Click="StartGame"></Button>
            <Button Content="Set Board" Margin="0, 10, 0, 0" MinHeight="25" MinWidth="75"></Button>
            <Button Content="Back" Margin="0, 10, 0, 0" MinHeight="25" MinWidth="75"></Button>
        </StackPanel>
    </Grid>
</Page>
