<Window x:Class="Jeorpady_Project.BoardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Jeorpady_Project"
        mc:Ignorable="d"
        Name="BoardWindowName" 
        WindowState="Maximized"
        WindowStyle="None"
        WindowStartupLocation="Manual"
        Title="BoardWindow" Height="450" Width="800">
    <Grid  Name="boardGrid" Background="Black" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <Frame x:Name="Board" NavigationUIVisibility="Hidden" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,0,0"/>
        <Frame x:Name="Score" NavigationUIVisibility="Hidden">
            <Frame.MaxHeight>
                20
            </Frame.MaxHeight>
        </Frame>
    </Grid>
</Window>
